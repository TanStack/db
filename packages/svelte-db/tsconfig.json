{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["svelte"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "tests", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
