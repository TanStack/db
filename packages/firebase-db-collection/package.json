{
  "name": "@tanstack/firebase-db-collection",
  "version": "0.0.1",
  "description": "Firebase/Firestore collection integration for TanStack DB",
  "author": "Kyle Mathews",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TanStack/db",
    "directory": "packages/firebase-db-collection"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "tanstack",
    "tanstack-db",
    "firebase",
    "firestore",
    "realtime",
    "sync",
    "collection"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src tests --fix",
    "type-check": "tsc --noEmit",
    "emulator": "firebase emulators:start --only firestore",
    "emulator:ci": "firebase emulators:exec --only firestore 'npm test'"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "firebase": "^11.2.0"
  },
  "peerDependencies": {
    "@tanstack/db": "workspace:*"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@tanstack/config": "^0.14.0",
    "@tanstack/db": "workspace:*",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitest/coverage-istanbul": "^3.0.9",
    "eslint": "^9.22.0",
    "firebase-admin": "^13.0.2",
    "firebase-tools": "^13.31.0",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  },
  "type": "module"
}
